<VBox spacing="10" xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.BookingFormController">

    <Label text="顾客信息" style="-fx-font-size: 24;" />

    <GridPane hgap="10" vgap="10">
        <Label text="名字 *" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="firstNameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="姓氏 *" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
        <TextField fx:id="lastNameField" GridPane.rowIndex="0" GridPane.columnIndex="3"/>

        <Label text="电子邮件 *" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="emailField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="电话 *" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="phoneField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="地址 1 *" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="address1Field" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="城市 *" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="cityField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="国家 *" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <ComboBox fx:id="countryBox" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
    </GridPane>

    <Button text="下一步：选择航班" onAction="#goToFlightSelector"/>
</VBox>
